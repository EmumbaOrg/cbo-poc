# CBO Banking App PoC - Environment Configuration
# Copy this file to .env and fill in your actual values

# JWT Secret Key (generate a secure random key for production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Vectara Configuration
# Get these from your Vectara dashboard
VECTARA_CUSTOMER_ID=your-vectara-customer-id
VECTARA_CORPUS_ID=your-vectara-corpus-id
VECTARA_API_KEY=your-vectara-api-key

# Database Configuration (for production)
DATABASE_URL=sqlite:///./cbo_poc.db

# CORS Origins (add your frontend URLs)
CORS_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app

# Logging Level
LOG_LEVEL=INFO

# Development/Production Mode
ENVIRONMENT=development

# OpenAI Configuration
# TODO: Add your OpenAI API key for chat summarization
OPENAI_API_KEY= your-OPENAI_API_KEY

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000